@model BioNetWork.Areas.User.Models.RegisterModel
<div class="container mt-5">
    <div class="row justify-content-center align-content-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3 align-items-center">Регистрация</h1>
            <form method="post" action="Register">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password">Пароль</label>
                    <input type="password" class="form-control" asp-for="Password" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ConfirmPassword">Ввдите пароль ещо раз</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" />
                </div>
                <div class="mb-3 row justify-content-center">
                    <button type="submit" class="btn btn-primary">Зарегистрираться</button>
                </div>
            </form>
        </div>
    </div>
</div>