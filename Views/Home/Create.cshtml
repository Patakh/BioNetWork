@model BioNetWork.Models.Users.UsersModel
<br />
<h2 class="my-3">Новый пользователь</h2>

<form method="post" action="CreatePerson">
    <div class="row justify-content-center mb-4">
        <div class="col-5">
            <div class="row mb-3">
                <div class="input-group">
                    <div class="input-group-text">
                        <label class="form-label">Имя </label>
                    </div>
                    <input class="form-control" name="Name"/>
                </div>
            </div>
            <div class="row mb-3">
                <div class="input-group">
                    <div class="input-group-text">
                        <label class="form-label">Email</label>
                    </div>
                    <input class="form-control" name="Email"/>
                </div>
            </div>
            <div class="row mb-3">
                <div class="input-group">
                    <div class="input-group-text">
                        <label class="form-label">Телефон</label>
                    </div>
                    <input class="form-control" name="Phone"/>
                </div>
            </div>
            <div class="row mb-3">
                <div class="input-group">
                    <div class="input-group-text">
                        <label class="form-label">Адрес</label>
                    </div>
                    <input class="form-control" name="Adres"/>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 b-grid">
                    <button type="submit" class="btn btn-outline-primary">Отправить</button>
                </div>
                <div class="col-sm-3 b-grid">
                    <a class="btn btn-outline-primary" href="/" role="button">Назад</a>
                </div>
            </div>
        </div>
    </div>
</form>
